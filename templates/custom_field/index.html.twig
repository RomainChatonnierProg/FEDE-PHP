{% extends 'base.html.twig' %}

{% block title %}CustomField index{% endblock %}

{% block body %}
    <h1>CustomField index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for custom_field in custom_fields %}
            <tr>
                <td>{{ custom_field.id }}</td>
                <td>{{ custom_field.name }}</td>
                <td>{{ custom_field.value }}</td>
                <td>
                    <a href="{{ path('app_custom_field_show', {'id': custom_field.id}) }}">show</a>
                    <a href="{{ path('app_custom_field_edit', {'id': custom_field.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_custom_field_new') }}">Create new</a>
{% endblock %}
